<section class="form-container">
  <header class="form-header">
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Sign in to access your pokemons !</p>
  </header>
  <form method="post" action="/signin" id="form_user">
  {{> flashMessage }}
    <div class="form">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="SachaBourville@outlook.com" required value="yo@gui.com">
    </div>
     <div class="form">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" name="password" type="password" class="input-text input" placeholder="••••••" required value="1234">
    </div>
    <button class="btn">Log in !</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/signup" class="button-link-form">Sign Up</a></p>
</section>

 <footer>
