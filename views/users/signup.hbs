<section class="form-container">
  <header class="form-header">
    <h1 class="form-title">Let's become a pokemon's trainer !</h1>
    {{!-- <p class="form-subtitle">Welcome to the family</p> --}}
  </header>
  <form method="post" action="/signup" id="form_user" enctype="multipart/form-data">
  {{> flashMessage }}
    <div class="form">
      <label for="pseudo" class="label-ref label">Pseudo</label>
      <input id="pseudo" name="pseudo" type="text" class="input-text input" placeholder="Sacha" required >
    </div>
    <div class="form">
      <label for="avatar">Avatar</label>
      <input type="file" id="avatar" name="avatar">
    </div>
    <div class="form">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="SachaBourville@outlook.com" required>
    </div>
    <div class="form">
    <label class="label-ref label" for="region">Region</label>
    <select class="input" name="region" id="region">
        <option selected value="Kanto">Kanto</option>
        <option value="Johto">Johto</option>
        <option value="Hoenn">Hoenn</option>
        <option value="Sinnoh">Sinnoh</option>
        <option value="Unys">Unys</option>
        <option value="Kalos">Kalos</option>
        <option value="Alola">Alola</option>
        <option value="Galar">Galar</option>
    </select>
    </div>
    <div class="form">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" name="password" type="password" class="input-text input" placeholder="your password here" required >
    </div>
    <button class="btn">Create Account</button>
  </form>
  <p class="form-sub-infos">Already have an account ? <a href="/signin" class="button-link-form">Sign In</a></p>
</section>

  {{> footer}}