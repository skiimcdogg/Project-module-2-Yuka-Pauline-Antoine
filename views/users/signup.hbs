<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Let's become a pokemon's trainer !</h1>
    <p class="form-subtitle">Welcome to the family</p>
  </header>
  {{!-- {{#if msg}}
  <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}} --}}
  <form method="post" action="/signup" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="pseudo" class="label-ref label">Pseudo</label>
      <input id="pseudo" name="pseudo" type="text" class="input-text input" placeholder="Sacha" required value="yo">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="SachaBourville@outlook.com" required value="yo@gui.com">
    </div>
    <div class="form-item-wrapper flexed-item">
    <label for="region">Region</label>
    <select name="region" id="region">
        <option selected value="Kanto">Kanto</option>
        <option value="Johto">Johto</option>
        <option value="Hoenn">Hoenn</option>
        <option value="Sinnoh">Sinnoh</option>
        <option value="Unys">Unys</option>
        <option value="Kalos">Kalos</option>
        <option value="Alola">Alola</option>
        <option value="Galar">Galar</option>
    </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" name="password" type="password" class="input-text input" placeholder="••••••" required value="1234">
    </div>
    <button class="button-primary white">Create Account</button>
  </form>
  <p class="form-sub-infos">Already have an account ? <a href="/signin" class="button-link-form">Sign In</a></p>
</section>