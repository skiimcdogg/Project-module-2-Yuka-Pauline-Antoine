<section class="details-pokemon">

<div class="pokedex" >
  <img src="/images/layout/pokedexforAll.png" alt="">
 <div class="pokemon_sprite" ><img src="{{pokemon.sprites.front_default}}"></div>
 <div class="poke_name"><h1>{{pokemon.name}}</h1></div>
 </div>
  
<div class="info_pokemon">

<p class="info_detail_poke"> Height: {{pokemon.height}}</p>
<p class="info_detail_poke">Weight: {{pokemon.weight}}</p>
<p class="info_detail_poke">Types:
{{#each pokemon.types}}
{{this.type.name}}
{{/each}}</p>
<p class="info_detail_poke">Stats:</p>
{{#each pokemon.stats}}
<p class="info_detail_stats">{{this.stat.name}}: {{this.base_stat}}</p>
{{/each}}

<form method="post" action="/pokemons/create">
<input type="hidden" name="name" value={{pokemon.name}}>
<input type="hidden" name="image" value={{pokemon.sprites.front_default}}>
<input type="hidden" name="height" value={{pokemon.height}}>
<input type="hidden" name="weight" value={{pokemon.weight}}>
<input type="hidden" name="types" value={{#each pokemon.types}}{{this.type.name}}{{#unless @last}},{{/unless}}{{/each}}>
<input type="hidden" name="stats" value={{#each pokemon.stats}}{{this.stat.name}}{{#unless @last}},{{/unless}}{{/each}}>
<input type="hidden" name="base_stat" value={{#each pokemon.stats}}{{this.base_stat}}{{#unless @last}},{{/unless}}{{/each}}>
<input type="hidden" name="moves" value={{#each pokemon.moves}}{{this.move.name}}{{#unless @last}},{{/unless}}{{/each}}>
<button class="add_pokemon_button"> <img src="/images/layout/PokÃ©_Ball-RS.png" alt=""> </button>
</form>

</div>





</section>




